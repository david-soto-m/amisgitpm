{
    "branch":"main",
    "install_script": [
            "meson setup build -Dprefix=${HOME}/.local",
            "meson compile -C build",
            "meson install -C build"
        ],
    "name":"miniI18n",
    "uninstall_script":[
        "rm ~/.local/bin/miniI18n",
        "rm ~/.local/share/locale/en/LC_MESSAGES/miniI18n.mo",
        "rm ~/.local/share/locale/es/LC_MESSAGES/miniI18n.mo"
    ],
    "update_policy":"Never",
    "url":"https://github.com/david-soto-m/minimal_l18n"
}
